{
  "manifest_version": 3,
  "name": "Safari History Sync",
  "version": "1.0",
  "description": "Decentralized browser history tracking and synchronization",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "history",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
}